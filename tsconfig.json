{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "esModuleInterop": true,
    "outDir": "build",
    "jsx": "react",
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "noLib": false,
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es2019",
      "esnext.asynciterable",
      "dom"
    ],
    "types": [
      "jest",
      "node",
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "custom-typings/*"
  ],
  "exclude": [
    "**/*-test.*"
  ]
}
