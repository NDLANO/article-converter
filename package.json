{
  "name": "article-converter",
  "version": "0.0.1",
  "description": "NDLA Article converter",
  "main": "index.js",
  "scripts": {
    "lint": "yarn lint-prettier --silent && yarn lint-es --silent",
    "lint-es": "eslint src",
    "lint-prettier": "node prettier.js lint",
    "prettier": "node prettier.js write",
    "start": "nodemon --watch src/ src/server.js | bunyan",
    "start-prod": "cross-env NODE_ENV=production node src/server.js",
    "test": "cross-env NDLA_ENVIRONMENT=test jest",
    "tdd": "npm test -- --watch"
  },
  "engines": {
    "node": "~8.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/article-converter.git"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-ndla": "^0.2.1",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bunyan": "^1.8.10",
    "classnames": "2.2.5",
    "compression": "1.6.2",
    "cors": "^2.8.3",
    "defined": "1.0.0",
    "express": "^4.15.3",
    "http-status": "^1.0.1",
    "isomorphic-fetch": "2.2.1",
    "lodash": "^4.17.4",
    "ndla-licenses": "^0.0.8",
    "ndla-ui": "^0.6.0",
    "ndla-util": "^0.1.1",
    "parse5": "^3.0.2",
    "prop-types": "^15.5.10",
    "react": "next",
    "react-dom": "next",
    "string-replace-async": "^1.2.0"
  },
  "jest": {
    "testRegex": "/__tests__/.*-test.(js|jsx)$"
  },
  "bugs": {
    "url": "https://github.com/NDLANO/article-converter/issues"
  },
  "homepage": "https://github.com/NDLANO/article-converter",
