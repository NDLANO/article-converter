{
  "name": "article-converter",
  "version": "0.0.1",
  "description": "NDLA Article converter",
  "main": "src/app.js",
  "scripts": {
    "build": "babel src -d build --ignore __tests__/",
    "clean": "rimraf build",
    "check-all": "yarn format-check && yarn lint-es && yarn test-ci",
    "test-ci": "cross-env NDLA_ENVIRONMENT=test NODE_ENV=unittest jest --maxWorkers=4 --ci",
    "test": "cross-env NDLA_ENVIRONMENT=test NODE_ENV=unittest jest",
    "tdd": "cross-env NDLA_ENVIRONMENT=test NODE_ENV=unittest jest --watch",
    "lint": "yarn format-check && yarn lint-es",
    "lint-es": "eslint --cache --cache-location '.eslintcache/' --max-warnings=0 src",
    "format-check": "node prettier.js lint",
    "start": "nodemon --exec babel-node --watch src/ src/server.js | bunyan",
    "start-prod": "cross-env NODE_ENV=production node build/server.js",
    "prebuild": "yarn run clean",
    "format": "node prettier.js write"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/article-converter.git"
  },
  "devDependencies": {
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chalk": "^2.4.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.0",
    "eslint-config-ndla": "^1.0.2",
    "jest": "^23.6.0",
    "jest-emotion": "9",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "swagger-ui-express": "^3.0.10"
  },
  "dependencies": {
    "@ndla/article-scripts": "^0.5.3",
    "@ndla/button": "^0.2.2",
    "@ndla/i18n": "^0.4.1",
    "@ndla/licenses": "^0.4.3",
    "@ndla/notion": "^0.1.21",
    "@ndla/ui": "^0.19.8",
    "@ndla/util": "^0.3.1",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "cheerio": "^1.0.0-rc.2",
    "classnames": "2.2.6",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "defined": "1.0.0",
    "emotion": "^9.2.12",
    "emotion-server": "^9.2.12",
    "express": "^4.16.3",
    "http-status": "^1.2.0",
    "intl-format-cache": "^2.1.0",
    "intl-messageformat": "^2.2.0",
    "intl-messageformat-parser": "^1.4.0",
    "isomorphic-fetch": "2.2.1",
    "lodash": "^4.17.10",
    "nock": "^10.0.0",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-emotion": "^9.2.12",
    "react-router-dom": "^4.3.1",
    "react-tabs": "^2.3.0",
    "string-replace-async": "^1.2.1",
    "swagger-jsdoc": "^1.9.7"
  },
  "bugs": {
    "url": "https://github.com/NDLANO/article-converter/issues"
  },
  "homepage": "https://github.com/NDLANO/article-converter",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0"
}
