{
  "name": "article-converter",
  "version": "0.0.1",
  "description": "NDLA Article converter",
  "main": "src/app.js",
  "scripts": {
    "build": "babel src -d build --ignore __tests__/",
    "clean": "rimraf build",
    "check-all": "yarn format-check && yarn lint-es && yarn test-ci",
    "test-ci": "cross-env NDLA_ENVIRONMENT=test NODE_ENV=unittest jest --maxWorkers=4 --ci",
    "test": "cross-env NDLA_ENVIRONMENT=test NODE_ENV=unittest jest",
    "tdd": "cross-env NDLA_ENVIRONMENT=test NODE_ENV=unittest jest --watch",
    "lint": "yarn format-check && yarn lint-es",
    "lint-es": "eslint --cache --cache-location '.eslintcache/' --max-warnings=0 src",
    "format-check": "node prettier.js lint",
    "start": "nodemon --exec babel-node --watch src/ src/server.js --inspect | bunyan",
    "start-prod": "cross-env NODE_ENV=production node build/server.js",
    "prebuild": "yarn run clean",
    "format": "node prettier.js write"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/article-converter.git"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-proposal-optional-chaining": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.1.0",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "eslint-config-ndla": "^1.1.0",
    "jest": "^24.1.0",
    "jest-emotion": "^10.0.9",
    "nock": "^11.9.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "regenerator-runtime": "^0.13.1",
    "rimraf": "^2.6.3",
    "swagger-ui-express": "^4.0.2"
  },
  "dependencies": {
    "@babel/cli": "^7.12.0",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@ndla/article-scripts": "^0.5.20",
    "@ndla/button": "^0.3.48",
    "@ndla/code": "^0.1.13",
    "@ndla/i18n": "^0.5.1",
    "@ndla/licenses": "^0.6.41",
    "@ndla/notion": "^0.3.5",
    "@ndla/ui": "^0.30.22",
    "@ndla/util": "^0.4.4",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.13",
    "cheerio": "^1.0.0-rc.2",
    "classnames": "2.2.6",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "defined": "1.0.0",
    "express": "^4.16.4",
    "he": "^1.2.0",
    "http-status": "^1.3.1",
    "intl-format-cache": "^2.1.0",
    "intl-messageformat": "^2.2.0",
    "intl-messageformat-parser": "^1.4.0",
    "isomorphic-fetch": "3.0.0",
    "lodash": "^4.17.20",
    "prop-types": "^15.7.2",
    "query-string": "^6.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "remarkable": "^2.0.0",
    "string-replace-async": "^1.2.1",
    "swagger-jsdoc": "^3.2.7"
  },
  "bugs": {
    "url": "https://github.com/NDLANO/article-converter/issues"
  },
  "homepage": "https://github.com/NDLANO/article-converter",
