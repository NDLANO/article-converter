{
  "prettier.singleQuote": true,
  "prettier.jsxBracketSameLine": true,
  "prettier.trailingComma": "es5",
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/coverage/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage/**": true
  }
}
